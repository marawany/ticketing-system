# ============================================================================
# Turing NexusFlow - Environment Configuration Example
# ============================================================================
# Copy this file to .env and fill in your values
# ============================================================================

# ============================================================================
# LLM Providers
# ============================================================================

# Azure OpenAI (recommended for enterprise)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# OpenAI Direct (alternative)
OPENAI_API_KEY=sk-proj-your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic (alternative)
ANTHROPIC_API_KEY=sk-ant-api03-your_anthropic_api_key

# ============================================================================
# Databases
# ============================================================================

# PostgreSQL
DATABASE_URL=postgresql+asyncpg://nexusflow:nexusflow123@localhost:5432/nexusflow

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=nexusflow123
NEO4J_DATABASE=neo4j

# Milvus Configuration
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USER=root
MILVUS_PASSWORD=
MILVUS_COLLECTION=nexusflow_tickets

# ============================================================================
# Observability
# ============================================================================

# Arize Phoenix Configuration
PHOENIX_HOST=0.0.0.0
PHOENIX_PORT=6006
PHOENIX_GRPC_PORT=4317
PHOENIX_PROJECT_NAME=turing-nexusflow
PHOENIX_ENABLED=true

# ============================================================================
# Authentication
# ============================================================================

ENABLE_AUTH=false
ENABLE_TEST_AUTH_BYPASS=true
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# Classification Configuration
# ============================================================================

CLASSIFICATION_CONFIDENCE_THRESHOLD=0.7
HITL_THRESHOLD=0.5
BATCH_SIZE=50

# ============================================================================
# Model Settings
# ============================================================================

EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536
NEXUSFLOW_DEFAULT_MODEL=gpt-4o

# ============================================================================
# Application Settings
# ============================================================================

ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
